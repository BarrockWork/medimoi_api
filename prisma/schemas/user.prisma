//**** Is necessary to add the datasource here in order to use @db***/
datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id                          Int                         @id @default(autoincrement())
    firstName                   String                      @db.VarChar(50)
    lastName                    String                      @db.VarChar(50)
    age                         Int                         @db.UnsignedInt
    email                       String                      @db.VarChar(50) @unique
    password                    String                      @db.VarChar(255)
    cellphone                   String                      @db.VarChar(50)
    homephone                   String                      @db.VarChar(50)
    workphone                   String?                     @db.VarChar(50)
    role                        String                      @db.longText
    // User_type relation ------------------------
    userTypeId                  Int
    UserType                    UserType                   @relation(fields: [userTypeId], references:[id])
    // -------------------------------------------
    lastConnectionId            DateTime                    @default(now())
    createdAt                   DateTime                    @default(now())
    updatedAt                   DateTime?                   @updatedAt
    isActive                    Boolean                     @default(true)
    Addresses                   Address[]
    Treatments                  Treatment[]
    UsersCompany                UserCompany[]
    Contacts                    Contact[]
    UsersNotificationsType      UserNotificationType[]
}

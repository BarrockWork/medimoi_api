//**** Is necessary to add the datasource here in order to use @db***/
datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id                          Int                         @id @default(autoincrement())
    firstName                   String                      @db.VarChar(50)
    lastName                    String                      @db.VarChar(50)
    age                         Int                         @db.UnsignedInt
    email                       String                      @db.VarChar(50) @unique
    password                    String                      @db.VarChar(255)
    cellphone                   String                      @db.VarChar(50)
    homephone                   String                      @db.VarChar(50)
    workphone                   String?                     @db.VarChar(50)
    role                        String                      @db.longText
    // User_type relation ------------------------
    user_type_id                Int
    UserType                    UserType                   @relation(fields: [user_type_id], references:[id])
    // -------------------------------------------
    lastConnectionId            DateTime                    @default(now())
    createdAt                   DateTime                    @default(now())
    updatedAt                   DateTime?                   @updatedAt
    isActive                    Boolean                     @default(true)
    Addresses                   Address[]
    Treatments                  Treatment[]
    UserCompany                 UserCompany
    Contacts                    Contact[]
    UserNotificationTypes       UserNotificationType[]
}

//**** Is necessary to initialize the models relations here in order to be merging with PrismaSDK ****/
model UserType {
    id                   Int     @id
    Users               User[]
}
model Address {
    id                  Int     @id
    user_id             Int
    User                User    @relation(fields: [user_id], references: [id])
}
model UserCompany {
    id                  Int     @id
    user_id             Int
    User                User    @relation(fields: [user_id], references: [id])
}
model Contact {
    id                  Int     @id
    user_id             Int
    User                User    @relation(fields: [user_id], references: [id])
}
model Treatment {
    id                  Int     @id
    user_id             Int
    User                User    @relation(fields: [user_id], references: [id])
}
model UserNotificationType {
    id                  Int     @id
    user_notification_type_id   Int
    UserNotificationType        UserNotificationType       @relation(fields: [user_notification_type_id], references: [id])
}

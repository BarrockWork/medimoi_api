model User_company {
    id              Int         @id @default(autoincrement())
    // Company relation ---------
    company_id      Int
    // -------------------------------
    // User relation -----------------
    user_id         Int
    user            User            @relation(fields: [user_id], references: [id])
    // -------------------------------
    createdAt       DateTime        @default(now())
    updatedAt       DateTime?       @updatedAt
    isActive        Boolean         @default(true)
}

model User{
    id Int @id
    users_company User_company[]
}
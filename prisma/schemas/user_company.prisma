//**** Is necessary to add the datasource here in order to use @db***/
datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model UserCompany {
    id              Int         @id @default(autoincrement())
    // Company relation ---------
    company_id       Int
    Company         Company     @relation(fields: [company_id], references:[id])
    // -------------------------------
    // User relation -----------------
    user_id          Int
    User            User        @relation(fields: [user_id], references: [id])
    // -------------------------------
    createdAt       DateTime    @db.DateTime(now())
    updatedAt       DateTime?   @updatedAt
    isActive        Boolean     @default(true)
}

//**** Is necessary to initialize the models relations here in order to be merging with PrismaSDK ****/
model Company {
    id              Int     @id
    UsersCompany    UserCompany[]
}
model User {
    id              Int     @id
    UserCompany     UserCompany
}